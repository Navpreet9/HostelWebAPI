@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Hostel App</h1>
</div>
<div class="row">
    <div class="col-md-6 text-center">
        <button class="btn btn-success" onclick="displayBookings()">View All Hostel Booking</button>
    </div>
    <div class="col-md-6 text-center">
        <button class="btn btn-info" onclick="showBookingForm()">Book Hostel</button>
    </div>
</div>
<div class="row mt-2" id="hostel_details">

</div>
<div id="hostel_form" class="mt-2">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 id="title_message">Fill Form to Book Hostel</h1>
        </div>
        <div class="col-md-12">
            <form>
                <div class="form-group">
                    <label for="rollno">Enter Roll No: </label>
                    <input type="number" class="form-control" id="rollno" />
                    <input type="hidden" class="form-control" id="id" />
                </div>
                <div class="form-group">
                    <label for="name">Enter Student Name: </label>
                    <input type="text" class="form-control" id="name" />
                </div>
                <div class="form-group">
                    <label for="floor">Choose Floor: </label>
                    <select class="form-control" id="floor">
                        <option value="Ground Floor">Ground Floor</option>
                        <option value="First Floor">First Floor</option>
                        <option value="Second Floor">Second Floor</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="room">Enter Room Number: </label>
                    <input type="number" class="form-control" id="room" />
                </div>
                <div class="form-group">
                    <label>Choose Facility: </label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="facility" id="c1" value="Gym">
                        <label class="form-check-label" for="c1">Gym</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="facility" id="c2" value="AC">
                        <label class="form-check-label" for="c2">AC</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="facility" id="c3" value="Library">
                        <label class="form-check-label" for="c3">Library</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="facility" id="c4" value="Mess">
                        <label class="form-check-label" for="c4">Mess</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="facility" id="c5" value="Iron">
                        <label class="form-check-label" for="c5">Iron</label>
                    </div>
                </div>
                <div class="text-center">
                    <button type="button" onclick="saveDetails()" class="btn btn-dark">Save Details</button>
                </div>
            </form>
        </div>
        <div class="col-md-12" id="result">
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/scripting.js"></script>

    <script>
        $(document).ready(function () {
            displayBookings();
        });
    </script>
}